<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <div class="container">
    <header>
      <h1>ğŸ‘¥ <%= title %></h1>
      <p class="subtitle">Total Registered: <%= totalUsers %></p>
    </header>

    <nav>
      <a href="/">Register</a>
      <a href="/users" class="active">View Users</a>
    </nav>

    <div class="card">
      <% if (users.length === 0) { %>
        <div class="empty-state">
          <p>ğŸ“‹ No users registered yet.</p>
          <a href="/" class="btn-primary">Register First User</a>
        </div>
      <% } else { %>
        <div class="users-grid">
          <% users.forEach(user => { %>
            <div class="user-card" id="user-<%= user.id %>">
              <div class="user-header">
                <div class="avatar"><%= user.name.charAt(0).toUpperCase() %></div>
                <div class="user-info">
                  <h3><%= user.name %></h3>
                  <p class="user-email"><%= user.email %></p>
                </div>
              </div>
              <div class="user-meta">
                <span>ğŸ‚ <%= user.age %> years</span>
                <span>ğŸŒ <%= user.country %></span>
              </div>
              <div class="user-footer">
                <small>â° <%= user.timestamp %></small>
                <button class="btn-delete" onclick="deleteUser('<%= user.id %>')">Delete</button>
              </div>
            </div>
          <% }); %>
        </div>
      <% } %>
    </div>
  </div>

  <script>
    async function deleteUser(id) {
      if (!confirm('Delete this user?')) return;
      
      try {
        const res = await fetch(`/users/${id}`, { method: 'DELETE' });
        if (res.ok) {
          document.getElementById(`user-${id}`).remove();
          location.reload();
        }
      } catch (err) {
        alert('Error deleting user');
      }
    }
  </script>
</body>
</html>
