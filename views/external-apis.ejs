<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/custom.css">
</head>

<body class="bg-light">

  <%- include('components/navbar') %>

  <div class="container my-5" style="margin-top: 100px !important;">

    <div class="text-center mb-5">
      <h1 class="display-4 fw-bold text-gradient">üåç External API Integration</h1>
      <p class="lead text-muted">OAuth, Rate Limiting & Third-Party Services</p>
    </div>

    <!-- API Stats -->
    <div class="row mb-4">
      <div class="col-md-4">
        <div class="card border-0 shadow">
          <div class="card-body text-center">
            <h3 class="text-primary"><%= user.apiCallsCount || 0 %></h3>
            <p class="text-muted mb-0">Total API Calls</p>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="card border-0 shadow">
          <div class="card-body text-center">
            <h3 class="text-success">10/min</h3>
            <p class="text-muted mb-0">Rate Limit</p>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="card border-0 shadow">
          <div class="card-body text-center">
            <h3 class="text-info">‚úì</h3>
            <p class="text-muted mb-0">Auth: <%= user.googleId ? 'Google' : 'Email' %></p>
          </div>
        </div>
      </div>
    </div>

    <!-- Weather API -->
    <div class="card mb-4 shadow">
      <div class="card-body">
        <h5 class="card-title"><i class="bi bi-cloud-sun"></i> Weather API</h5>
        <div class="input-group mb-3">
          <input type="text" class="form-control" id="cityInput" placeholder="Enter city name" value="Mumbai">
          <button class="btn btn-primary" onclick="getWeather()">Get Weather</button>
        </div>
        <div id="weatherResult"></div>
      </div>
    </div>

    <!-- News API -->
    <div class="card mb-4 shadow">
      <div class="card-body">
        <h5 class="card-title"><i class="bi bi-newspaper"></i> News API</h5>
        <button class="btn btn-primary" onclick="getNews()">Get Latest Tech News</button>
        <div id="newsResult" class="mt-3"></div>
      </div>
    </div>

    <!-- Exchange Rate API -->
    <div class="card mb-4 shadow">
      <div class="card-body">
        <h5 class="card-title"><i class="bi bi-currency-exchange"></i> Exchange Rate API</h5>
        <button class="btn btn-primary" onclick="getExchangeRates()">Get Exchange Rates</button>
        <div id="exchangeResult" class="mt-3"></div>
      </div>
    </div>

    <!-- GitHub API -->
    <div class="card mb-4 shadow">
      <div class="card-body">
        <h5 class="card-title"><i class="bi bi-github"></i> GitHub API</h5>
        <div class="input-group mb-3">
          <input type="text" class="form-control" id="githubInput" placeholder="GitHub username" value="torvalds">
          <button class="btn btn-primary" onclick="getGitHubUser()">Get User</button>
        </div>
        <div id="githubResult"></div>
      </div>
    </div>

  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

  <script>
    // Get token from URL (Google OAuth) or localStorage
    const urlParams = new URLSearchParams(window.location.search);
    const urlToken = urlParams.get('token');
    
    if (urlToken) {
      localStorage.setItem('token', urlToken);
      // Clean URL without reloading
      window.history.replaceState({}, document.title, window.location.pathname);
    }
    
    const token = localStorage.getItem('token');

    // Check if logged in
    if (!token) {
      alert('Please login first!');
      window.location.href = '/login';
    }

    async function apiCall(endpoint) {
      try {
        const response = await fetch(endpoint, {
          headers: {
            'Authorization': `Bearer ${token}`,
            'Content-Type': 'application/json'
          }
        });

        if (response.status === 429) {
          alert('Rate limit exceeded! Please wait before making more requests.');
          throw new Error('Rate limited');
        }

        if (response.status === 401) {
          alert('Session expired. Please login again.');
          localStorage.removeItem('token');
          window.location.href = '/login';
          return;
        }

        if (!response.ok) {
          throw new Error(`HTTP error! status: ${response.status}`);
        }

        return await response.json();
      } catch (error) {
        console.error('API Call Error:', error);
        throw error;
      }
    }

    async function getWeather() {
      const city = document.getElementById('cityInput').value;
      const resultDiv = document.getElementById('weatherResult');

      resultDiv.innerHTML = '<div class="text-center"><div class="spinner-border" role="status"></div></div>';

      try {
        const data = await apiCall(`/api/external/weather/${encodeURIComponent(city)}`);

        if (data.success) {
          resultDiv.innerHTML = `
            <div class="alert alert-info">
              <h6>${data.data.city}, ${data.data.country}</h6>
              <p><strong>${data.data.temperature}¬∞C</strong> - ${data.data.description}</p>
              <small>Humidity: ${data.data.humidity}% | Wind: ${data.data.wind_speed} m/s</small>
              ${data.data.cached ? '<br><span class="badge bg-warning mt-2">Cached</span>' : ''}
            </div>
          `;
        }
      } catch (error) {
        resultDiv.innerHTML = '<div class="alert alert-danger">Error fetching weather data</div>';
      }
    }

    async function getNews() {
      const resultDiv = document.getElementById('newsResult');
      resultDiv.innerHTML = '<div class="text-center"><div class="spinner-border" role="status"></div></div>';

      try {
        const data = await apiCall('/api/external/news?country=us&category=technology');

        if (data.success && data.data.articles) {
          let html = '<div class="row">';
          data.data.articles.slice(0, 3).forEach(article => {
            html += `
              <div class="col-md-4 mb-3">
                <div class="card h-100">
                  <img src="${article.urlToImage || 'https://via.placeholder.com/300'}" 
                       class="card-img-top" alt="News" style="height: 200px; object-fit: cover;">
                  <div class="card-body">
                    <h6 class="card-title">${article.title}</h6>
                    <p class="card-text small">${(article.description || '').slice(0, 100)}...</p>
                    <a href="${article.url}" target="_blank" class="btn btn-sm btn-primary">Read More</a>
                  </div>
                </div>
              </div>
            `;
          });
          html += '</div>';
          resultDiv.innerHTML = html;
        }
      } catch (error) {
        resultDiv.innerHTML = '<div class="alert alert-danger">Error fetching news</div>';
      }
    }

    async function getExchangeRates() {
      const resultDiv = document.getElementById('exchangeResult');
      resultDiv.innerHTML = '<div class="text-center"><div class="spinner-border" role="status"></div></div>';

      try {
        const data = await apiCall('/api/external/exchange/USD');

        if (data.success && data.data.rates) {
          let html = '<table class="table table-striped"><thead><tr><th>Currency</th><th>Rate (USD)</th></tr></thead><tbody>';
          Object.entries(data.data.rates).forEach(([currency, rate]) => {
            html += `<tr><td><strong>${currency}</strong></td><td>${rate.toFixed(4)}</td></tr>`;
          });
          html += '</tbody></table>';
          if (data.data.cached) {
            html += '<span class="badge bg-warning">Cached</span>';
          }
          resultDiv.innerHTML = html;
        }
      } catch (error) {
        resultDiv.innerHTML = '<div class="alert alert-danger">Error fetching exchange rates</div>';
      }
    }

    async function getGitHubUser() {
      const username = document.getElementById('githubInput').value;
      const resultDiv = document.getElementById('githubResult');

      resultDiv.innerHTML = '<div class="text-center"><div class="spinner-border" role="status"></div></div>';

      try {
        const data = await apiCall(`/api/external/github/${encodeURIComponent(username)}`);

        if (data.success) {
          resultDiv.innerHTML = `
            <div class="card">
              <div class="card-body">
                <div class="d-flex align-items-center">
                  <img src="${data.data.avatar}" width="80" class="rounded-circle me-3" alt="Avatar">
                  <div>
                    <h5>${data.data.name || data.data.login}</h5>
                    <p class="mb-1 text-muted">${data.data.bio || 'No bio available'}</p>
                    <small>Repos: ${data.data.public_repos} | Followers: ${data.data.followers}</small><br>
                    <a href="${data.data.html_url}" target="_blank" class="btn btn-sm btn-dark mt-2">
                      <i class="bi bi-github"></i> View Profile
                    </a>
                  </div>
                </div>
                ${data.data.cached ? '<span class="badge bg-warning mt-2">Cached</span>' : ''}
              </div>
            </div>
          `;
        }
      } catch (error) {
        resultDiv.innerHTML = '<div class="alert alert-danger">GitHub user not found</div>';
      }
    }
  </script>
</body>

</html>
